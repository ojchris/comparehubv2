{#
/**
 * @file
 * Theme override for a select element.
 *
 * Available variables:
 * - attributes: HTML attributes for the <select> tag.
 * - options: The <option> element children.
 *
 * @see template_preprocess_select()
 */
#}


{%
  set classes = [
    'centered-mast-filter-control',
  ]
%}

{% apply spaceless %}

  <div{{ attributes.addClass(classes) }}>
              <div class="app-custom-dropdown">
                <div class="custom-dropdown-label">
                  Select category
                </div>
                <div class="custom-dropdown-icon" data-for-dialog="selectBrandDialog">
                  <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path opacity="0.4" d="M6.07975 8.67993H11.4398L14.8195 13.1831L13.1562 14.8464C12.5215 15.4811 11.488 15.4811 10.8533 14.8464L5.6733 9.66638C5.30736 9.30043 5.56651 8.67993 6.07975 8.67993Z" fill="#667085" stroke="#667085"/>
                    <path d="M15.5344 12.4689L12.6908 8.67993H17.9204C18.4335 8.67993 18.6943 9.30178 18.3354 9.66787L15.5344 12.4689Z" fill="#667085" stroke="#667085"/>
                    </svg>                    
                </div>
              </div>
            </div>

    <div class="page-dialog dialog-full-height dialog-full-height-white-bg" id="selectBrandDialog">
        
        <div class="dialog-container">
          <div class="dialog-heading dialog-section ">
            <div class="dialog-heading-nav-icon" data-modal-id="selectBrandDialog">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M7.828 11.0002H20V13.0002H7.828L13.192 18.3642L11.778 19.7782L4 12.0002L11.778 4.22217L13.192 5.63617L7.828 11.0002Z" fill="#344054"/>
                </svg>
                
            </div>
            <div class="dialog-heading-text">
              Select Category
            </div>
          </div>
          <div class="dialog-sub-heading dialog-section ">
            <div class="dialog-sub-heading-text">
              Choose your preferred category
            </div>
          </div>
          <div class="dialog-content dialog-section">
            <div class="dialog-filter-control">
              <div class="dialog-input-container">
                <input type="text" placeholder="Search location" class="dialog-input">
              </div>
              <div class="dialog-input-icon">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M11 19C15.4183 19 19 15.4183 19 11C19 6.58172 15.4183 3 11 3C6.58172 3 3 6.58172 3 11C3 15.4183 6.58172 19 11 19Z" stroke="#667085" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                  <path d="M21.0004 20.9999L16.6504 16.6499" stroke="#667085" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                  </svg>
                  
              </div>
            </div>

    {% for option in options %}
      {% if option.type == 'optgroup' %}
        <optgroup label="{{ option.label }}">
          {% for sub_option in option.options %}
            <option value="{{ sub_option.value }}"{{ sub_option.selected ? ' selected="selected"' }}>{{ sub_option.label }}</option>
          {% endfor %}
        </optgroup>
      {% elseif option.type == 'option' %}

      
                    <div class="dialog-filter-content">
                    <div class="dialog-filter-content-text" value="{{ option.value }}"{{ option.selected ? ' selected="selected"' }}>{{ option.label }}</div>
                    </div>
                

      {% endif %}
    {% endfor %}
                </div>
            </div> 
        </div>

  </div>
{% endapply %}
